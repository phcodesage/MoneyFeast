# =====================================================
# MoneyFeast Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION (Required)
# =====================================================
# Get these from: Supabase Dashboard -> Settings -> API
# Project URL: https://your-project-ref.supabase.co
# Anon/Public Key: Your public API key

VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =====================================================
# SUPABASE STORAGE (Optional - for image uploads)
# =====================================================
# Storage bucket names (must match buckets created in Supabase)
VITE_STORAGE_BUCKET_AVATARS=avatars
VITE_STORAGE_BUCKET_POST_IMAGES=post-images

# =====================================================
# ANALYTICS CONFIGURATION (Optional)
# =====================================================

# Google Analytics
# Get from: https://analytics.google.com
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# Plausible Analytics
# Get from: https://plausible.io
# Your domain name
VITE_PLAUSIBLE_DOMAIN=

# Custom Analytics API (if using custom solution)
VITE_ANALYTICS_API_URL=

# =====================================================
# SITE CONFIGURATION (Optional)
# =====================================================

# Site Information
VITE_SITE_NAME=MoneyFeast
VITE_SITE_URL=https://yourdomain.com
VITE_SITE_DESCRIPTION=Master the Art of Earning Online

# Contact Information
VITE_CONTACT_EMAIL=contact@yourdomain.com
VITE_SUPPORT_EMAIL=support@yourdomain.com

# Social Media Links
VITE_SOCIAL_TWITTER=https://twitter.com/yourusername
VITE_SOCIAL_FACEBOOK=https://facebook.com/yourpage
VITE_SOCIAL_INSTAGRAM=https://instagram.com/yourusername
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/yourcompany

# =====================================================
# EMAIL CONFIGURATION (Optional - for future features)
# =====================================================

# SMTP Settings (for sending emails)
VITE_SMTP_HOST=
VITE_SMTP_PORT=
VITE_SMTP_USER=
VITE_SMTP_PASSWORD=

# SendGrid (Alternative email service)
VITE_SENDGRID_API_KEY=

# Mailgun (Alternative email service)
VITE_MAILGUN_API_KEY=
VITE_MAILGUN_DOMAIN=

# =====================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =====================================================

# Stripe (for monetization)
VITE_STRIPE_PUBLIC_KEY=

# PayPal (for monetization)
VITE_PAYPAL_CLIENT_ID=

# Disqus (for comments)
VITE_DISQUS_SHORTNAME=

# Google reCAPTCHA (for spam protection)
VITE_RECAPTCHA_SITE_KEY=

# Cloudinary (for image optimization)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_API_KEY=

# =====================================================
# SEO & SOCIAL SHARING (Optional)
# =====================================================

# Default OG Image (Open Graph)
VITE_DEFAULT_OG_IMAGE=https://yourdomain.com/og-image.png

# Twitter Card Settings
VITE_TWITTER_SITE=@yourusername
VITE_TWITTER_CREATOR=@yourusername

# =====================================================
# FEATURE FLAGS (Optional)
# =====================================================

# Enable/Disable Features
VITE_ENABLE_COMMENTS=false
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_SOCIAL_SHARE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SEARCH=true

# =====================================================
# DEVELOPMENT SETTINGS (Development Only)
# =====================================================

# API Rate Limiting
VITE_API_RATE_LIMIT=100

# Debug Mode
VITE_DEBUG_MODE=false

# Mock Data (for testing without Supabase)
VITE_USE_MOCK_DATA=false

# =====================================================
# ADMIN CONFIGURATION (Optional)
# =====================================================

# Admin Panel Settings
VITE_ADMIN_PATH=/admin
VITE_POSTS_PER_PAGE=10
VITE_MAX_UPLOAD_SIZE=5242880

# Default Author Name (fallback)
VITE_DEFAULT_AUTHOR=MoneyFeast Team

# =====================================================
# CONTENT SETTINGS (Optional)
# =====================================================

# Pagination
VITE_POSTS_PER_PAGE_PUBLIC=9
VITE_SEARCH_RESULTS_PER_PAGE=9

# Content Limits
VITE_MAX_TITLE_LENGTH=100
VITE_MAX_EXCERPT_LENGTH=200
VITE_MAX_TAGS=10

# =====================================================
# SECURITY (Production Only)
# =====================================================

# CORS Settings (if needed)
VITE_ALLOWED_ORIGINS=https://yourdomain.com

# Content Security Policy
VITE_CSP_ENABLED=true

# =====================================================
# NOTES
# =====================================================
# 
# REQUIRED for basic functionality:
# - VITE_SUPABASE_URL
# - VITE_SUPABASE_ANON_KEY
#
# RECOMMENDED for production:
# - VITE_GA_MEASUREMENT_ID (or other analytics)
# - VITE_SITE_URL
# - VITE_DEFAULT_OG_IMAGE
#
# OPTIONAL features:
# - All other variables are optional and can be added as needed
#
# Environment-specific files:
# - .env.local (local development, gitignored)
# - .env.development (development build)
# - .env.production (production build)
#
# =====================================================
